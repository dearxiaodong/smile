<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/layout_topcommon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/moreactivity_bk" >

        <Button
            android:id="@+id/btn_edt_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_mine_btn"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="修改密码" />

 <Button
     android:id="@+id/btn_clear_cach"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentTop="false"
     android:layout_below="@+id/btn_edt_psw"
     android:layout_marginTop="20dp"
     android:background="@drawable/selector_mine_btn"
     android:gravity="center_vertical|left"
     android:paddingLeft="10dp"
     android:text="清理缓存" />
 
  <Button
      android:id="@+id/btn_set_quit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="false"
      android:layout_below="@+id/btn_clear_cach"
      android:layout_marginTop="20dp"
      android:background="@drawable/selector_mine_btn"
      android:gravity="center_vertical|left"
      android:paddingLeft="10dp"
      android:text="退出当前账号" />
 
    </RelativeLayout>

</LinearLayout>
